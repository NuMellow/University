<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageUniLogo"
            android:contentDescription="@string/university_logo" />

        <TextView
            android:text="@string/university_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textUniversityName"
            android:textStyle="bold"
            android:padding="10dp" />

        <TextView
            android:text="@string/city_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textUniCity"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp" />

        <TextView
            android:text="@string/univerisiry_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textUniLink"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>